<h1>Eat-Da-Burger!</h1>

<div class="uneaten">
    <ol>
        {{#each burgers}}
            {{#unless this.devoured}}
                <li>
                    <form action="/{{id}}?_method=PUT" method="POST">
                        {{this.burger_name}}
                        <button >Devour It! Nom!</button>
                    </form>
                </li>
            {{/unless}}
        {{/each}}
    </ol>
</div>


<div class="eaten">
    <ol>
        {{#each burgers}}
            {{#if this.devoured}}
                <li>
                <form action="/{{id}}?_method=PUT" method="POST">
                    
                        <input placeholder="{{this.id}}. {{this.burger_name}}" />
                    
                    <button>Update Burger</button>
                </form>
                </li>
            {{/if}}
        {{/each}}
    </ol>
</div>

<form id="addABurger" action="/" method="POST">
    <div action="/" method="POST" class="form-group">
        <textarea class="userBurger" name="burger_name" placeholder="Gimme a burger!"></textarea>
        <button type="submit">Submit</button>
        <p>Enter the name of a buger you want to eat and click the "submit" button to add it to the menu!" </p>
  </div>
</form>
